vrrp_script check_haproxy {
    script "killall -0 haproxy"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    state {{ 'MASTER' if ansible_play_hosts.index(inventory_hostname) == 0 else 'BACKUP' }}
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ keepalived_priority + ansible_play_hosts.index(inventory_hostname) * 10 }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{ keepalived_virtual_ip }}
    }
    track_script {
        check_haproxy
    }
}
