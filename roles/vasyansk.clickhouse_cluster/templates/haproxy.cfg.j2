global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend stats
    bind *:{{ haproxy_stats_port }}
    mode http
    stats enable
    stats uri /stats
    stats refresh 30s
    stats admin if TRUE

frontend clickhouse_http
    bind *:{{ haproxy_frontend_http_port }}
    mode http
    default_backend clickhouse_servers_http

backend clickhouse_servers_http
    mode http
    balance roundrobin
    option httpchk GET /ping
    http-check expect status 200
    {% for host in groups['clickhouse_cluster'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ clickhouse_http_port }} check
    {% endfor %}

frontend clickhouse_tcp
    bind *:{{ haproxy_frontend_tcp_port }}
    mode tcp
    default_backend clickhouse_servers_tcp

backend clickhouse_servers_tcp
    mode tcp
    balance roundrobin
    option tcp-check
    {% for host in groups['clickhouse_cluster'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ clickhouse_tcp_port }} check
    {% endfor %}
